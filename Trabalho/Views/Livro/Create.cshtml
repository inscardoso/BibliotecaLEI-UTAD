@model Trabalho.Models.Livro

@* cabeçalho personalizado *@
@section CustomHeader {
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Livro" asp-action="Index">Home Page Bibliotecário</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarBibliotecario" aria-controls="navbarBibliotecario"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarBibliotecario">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Livro" asp-action="Index">Biblioteca</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar Livro</title>
    <style>
        body {
            background-color: #cdcfc0;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .header {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            margin-bottom: 20px;
        }

            .header h1 {
                font-size: 48px;
                font-family: 'Times New Roman', serif;
                margin: 0;
                border: 2px solid black;
                padding: 10px 20px;
            }

        .label-group {
            margin-bottom: 10px;
        }

            .label-group input, .label-group select {
                padding: 10px;
                font-size: 18px;
                border: 1px solid #000;
                background-color: #c1b29b;
                color: black;
            }

            .label-group label {
                font-size: 20px;
                margin-right: 10px;
            }

        .criar-button {
            margin-left: 10px;
            padding: 8px 12px;
            background-color: #f5e9db;
            color: black;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            text-decoration: none;
        }

        .button-group {
            display: flex;
            justify-content: center;
            gap: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Criar Livro</h1>
        </div>
        <hr />
        <form method="get" action="/Autor/Create" class="mb-4">
            <button type="submit" class="criar-button">Criar Autor</button>
        </form>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="label-group">
                <label class="control-label">ISBN</label>
                <input asp-for="Isbn" class="form-control" />
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>

            <div class="label-group">
                <label class="control-label">Preço</label>
                <input asp-for="Preco" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>

            <div class="label-group">
                <label class="control-label">Título</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="label-group">
                <label class="control-label">Exemplares</label>
                <input asp-for="NExemplares" type="number" min="1" class="form-control" />
                <span asp-validation-for="NExemplares" class="text-danger"></span>
            </div>

            <div class="label-group">
                <label class="control-label">Género</label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>

            <div class="label-group">
                <label class="control-label">Autor</label>
                <select asp-for="IdAutor" class="form-control" asp-items="ViewBag.IdAutor">
                    <option value="">Selecione o Autor</option>
                </select>
                <span asp-validation-for="IdAutor" class="text-danger"></span>
            </div>

            <input type="hidden" name="UsernameBibAdd" value="@ViewBag.UsernameBibAdd" />
            <input type="hidden" name="IdBiblioteca" value="@ViewBag.IdBiblioteca" />

            <div class="button-group mt-4">
                <input type="submit" value="Guardar" class="criar-button" />
                <a asp-action="Index" class="criar-button">Cancelar</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
